@model List<AlunoModel>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">Email</th>
                <th scope="col">Cep</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
            <tr>
                <td>@aluno.Nome</td>
                <td>@aluno.Idade</td>
                <td>@aluno.Contato</td>
                <td>@aluno.Email</td>
                <td>@aluno.Cep</td>
                <td><a type="button" class="btn btn-primary" asp-controller="Aluno" asp-action="BuscarEndereco" asp-route-cep="@aluno.Cep">Endereço</a> </td>
                <td><a type="submit" class="btn btn-primary" asp-controller="Alunos" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a> </td>
                <td><a type="button" class="btn btn-primary" asp-controller="Alunos" asp-action="ExcluirAluno" asp-route-id="@aluno.Id" method="post">Excluir</a> </td>
            </tr>
                }
            }
        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="Adicionar">Adicionar Novo Aluno</a>
    </div>
</div>